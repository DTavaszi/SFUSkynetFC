<div class="container">
  <div class="row" style="margin-top: 50px">
    <div class="col">
      <div style="padding: 10px 25px 10px 25px; background-color: #f2f2f2">
        <h4> Let's talk.</h4>
        <p style="font-size: .9em;">
          Contact us for inquiries about becoming a sponsor, member, or anything else. </br>
          We'll get back to you as soon as we can.
        </p>
      </div>
      <%= form_for @message do |f| %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :name, class: "required" %>
          <%= f.text_field :name, class: "form-control" %>
        <% end %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :email, class: "required" %>
          <%= f.text_field :email, class: "form-control" %>
        <% end %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :company %>
          <%= f.text_field :company, class: "form-control" %>
        <% end %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "form-control" %>
        <% end %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :subject, class: "required" %>
          <%= f.text_field :subject, class: "form-control" %>
        <% end %>

        <%= content_tag :div, class: 'form-group' do %>
          <%= f.label :description, class: "required" %>
          <%= f.text_area :description, class: "form-control" %>
        <% end %>

        <%= f.submit "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col" style="padding: 0; position: relative; max-height: 650px;">

      <div class="gmap">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5205.744773594426!2d-122.92432852212907!3d49.27881526732357!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x548679c0857a2227%3A0x506c3f6e30b55b!2sSimon+Fraser+University!5e0!3m2!1sen!2sca!4v1512449069097" width="100%" height="520px" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>

      <div style="padding: 25px; position: relative; background-color: #f2f2f2; margin-top: 25px;">
        <h4> Contact</h4>

        <div>
          <i class="fa fa-phone" aria-hidden="true"></i> XXX-YYY-ZZZZ </br>
          <i class="fa fa-envelope-o" aria-hidden="true"></i> <a href="mailto:sfuskynet@sfu.ca" target="_top">sfuskynet@sfu.ca </a> </br>
        </div>
      </div>
    </div>

  </div>


</div>
