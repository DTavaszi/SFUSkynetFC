<%= content_tag :div, class: "item #{ reverse }" do %>
  <%= content_tag :div, class: "line" do %>
    -
  <% end %>
  <%= content_tag :div, class: "inner gradient" do %>
    <%= content_tag :div, class: "date #{ reverse }" do %>
      <%= date %>
    <% end %>

    <%= content_tag :div, class: "details #{ reverse }" do %>
      <%= icon %>
      <%= details %>
    <% end %>
  <% end %>
<% end %>
